<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CollabStudioActivity">

    <include
        android:id="@+id/header"
        layout="@layout/common_toolbar_main" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/message_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llmessage"
        android:layout_below="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                tools:context=".activities.CollabStudioActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/eighteen_dp"
                        android:layout_marginTop="@dimen/eighteen_dp"
                        android:layout_marginEnd="@dimen/eighteen_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:text="Collab name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sixteen_sp"
                            android:textStyle="bold" />

                        <com.tntra.pargo2.custom.BoldTextView
                            android:id="@+id/tvcount"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:background="@drawable/layout_bg_corner"
                            android:gravity="center"
                            android:text="Start Collab"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/fourteen_sp" />

                    </LinearLayout>

                    <com.tntra.pargo2.custom.NormalTextView
                        android:id="@+id/tvInvitation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/eighteen_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:layout_marginEnd="@dimen/eighteen_dp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/fourteen_sp" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/sixteen_dp"
                                android:layout_marginTop="@dimen/fourteen_dp"
                                android:layout_marginEnd="@dimen/sixteen_dp"
                                app:cardCornerRadius="@dimen/five_dp"
                                app:cardElevation="@dimen/two_dp"
                                app:cardUseCompatPadding="true">


                                <LinearLayout
                                    android:id="@+id/llparent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/sixteen_dp"
                                    android:orientation="vertical">

                                    <com.tntra.pargo2.custom.NormalTextView
                                        android:id="@+id/tvdesc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textMultiLine|textCapSentences" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/chatRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/sixteen_dp"
                                android:layout_marginTop="@dimen/ten_dp"
                                android:layout_marginEnd="@dimen/sixteen_dp"
                                android:layout_marginBottom="@dimen/ten_dp" />

                        </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/llmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_corner_rounded"
            android:orientation="horizontal">

            <com.vanniktech.emoji.EmojiEditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/five_dp"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center"
                android:hint="message..."
                android:textColor="@color/text_color"
                android:textSize="@dimen/fourteen_sp"
                app:emojiSize="30sp" />

            <ImageView
                android:id="@+id/ivEmoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:paddingEnd="@dimen/five_dp"
                android:paddingRight="@dimen/five_dp"
                android:src="@mipmap/ic_emoji_icon" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnSend"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:src="@android:drawable/ic_menu_send" />

    </LinearLayout>
</RelativeLayout>