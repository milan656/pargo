<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/seven_dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/ten_dp"
        app:cardElevation="@dimen/two_dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tntra.pargo2.custom.NormalTextView
                android:id="@+id/tvRecordOption"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Record Audio / video"
                android:textColor="@color/text_color"
                android:textSize="@dimen/fourteen_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray_for_button" />

            <com.tntra.pargo2.custom.NormalTextView
                android:id="@+id/tvGallaryOption"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Choose From Library"
                android:textColor="@color/text_color"
                android:textSize="@dimen/fourteen_sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cancelCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        app:cardCornerRadius="@dimen/ten_dp"
        app:cardElevation="@dimen/two_dp"
        app:cardUseCompatPadding="true">

        <com.tntra.pargo2.custom.NormalTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/text_color"
            android:textSize="@dimen/fourteen_sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>