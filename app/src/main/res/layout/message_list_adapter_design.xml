<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llcontent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/sixteen_dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivCollabImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/gray"
                    app:civ_border_color="@color/dark_gray_text_color"
                    app:civ_border_width="1dp"
                    />

                <com.tntra.pargo2.custom.BoldTextView
                    android:id="@+id/tvGroupName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/white"
                    android:textSize="@dimen/thirty_six_sp"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/sixteen_dp"
                android:layout_marginEnd="@dimen/sixteen_dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Collab name 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp"
                    android:textStyle="bold" />

                <com.tntra.pargo2.custom.NormalTextView
                    android:id="@+id/tvCollabRoomDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorrem ipsum Lorrem ipsum"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/fourteen_sp" />
            </LinearLayout>
        </LinearLayout>


        <com.tntra.pargo2.custom.NormalTextView
            android:id="@+id/btnSelect"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="yesterday"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp"
            android:visibility="gone" />


    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:background="@color/gray" />

</LinearLayout>