<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    tools:context=".activities.CollabStudioActivity">

    <LinearLayout
        android:id="@+id/llmainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSubmit"
        android:orientation="vertical">

        <include layout="@layout/common_toolbar_main" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eighteen_dp"
            android:orientation="vertical">

            <com.tntra.pargo.custom.NormalTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What do you want to collaborate with?"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold" />

            <com.tntra.pargo.custom.NormalTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/four_dp"
                android:text="Select up to 4 people"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve_sp"
                android:textStyle="bold" />

            <com.tntra.pargo.custom.NormalEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:background="@drawable/layout_bg_corner"
                android:hint="Search for creator or aficinado"
                android:padding="@dimen/ten_dp"
                android:textColorHint="@color/dark_gray_text_color"
                android:textSize="@dimen/fourteen_sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen_dp">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fragment_background"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextColor="@color/light_gray_text_color" />
            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/followersRecycView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/ten_sp"
        android:text="Submit"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        android:textStyle="bold" />
</RelativeLayout>